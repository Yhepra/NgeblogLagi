@model User
@{
    Layout = "_LayoutNull";
    if (!string.IsNullOrEmpty(ViewBag.pesan))
    {
        <script>
            alert("@ViewBag.pesan");
        </script>
    }
}



<div class="container">
    <div class="card login-form">
        <div class="card-body">
            <h2 class="card-title mb-3">Login</h2>
            <h6 class="card-subtitle text-muted mb-5 fw-bold">Please login to use this site!</h6>
            <form asp-for="Login" method="post">            
                <div class="mb-4">
                    <label for="username" class="form-label">Username*</label>
                    <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Your Email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password*</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Min 8 character">
                </div>
